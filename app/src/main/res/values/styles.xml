<resources>

    <!-- Base application theme. -->
    <style name="LoginTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="LoginTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="CustomDialog" parent="AppTheme.NoActionBar" >
        <item name="android:windowBackground">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:background">#ffffff</item>
    </style>

    <style name="CustomDialogInfos" parent="CustomDialog">
        <item name="android:textSize">@dimen/subtitle_3_text_size</item>
        <item name="android:background">@color/light_gray</item>
        <item name="android:windowSoftInputMode">stateHidden|adjustResize</item>
    </style>

    <style name="HeaderTextViewStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:alpha">0.87</item>
    </style>

    <style name="GridItemStyle">
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="PrimaryTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:alpha">0.87</item>
    </style>

    <style name="SecondaryTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:alpha">0.54</item>
    </style>

    <style name="DialogWithTitle" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">false</item>
    </style>

</resources>
